{% block _recipe_recipeIngredients_entry_widget %}
    <div class="item">
        <div class="item-content">
            {% set pictogramType = enum('App\\Enum\\Common\\PictogramTypeEnum').Ingredient %}
            <img src="{{ value is null ? '' : pictogram_url(pictogramType, value.ingredient.type.pictogram) }}" alt=" " class="item-data-ingredient-pictogram">

            <div class="item-form">
                {{ form_row(form.ingredient) }}
                {{ form_row(form.quantity) }}
                {{ form_row(form.unit) }}
            </div>

            <span class="item-data-ingredient-label">
                {{ value is null ?: value.ingredient.label }}
            </span>
        </div>

        <button type="button" class="item-remove-trigger" aria-label="Supprimer l'ingrÃ©dient">
            <i class="icon icon-trash"></i>
        </button>
    </div>
{% endblock %}
