{% extends 'base.html.twig' %}

{% block title %}
    Créer un compte | {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Créer un compte</h1>

    {{ form_start(form) }}

    {{ form_row(form.email) }}
    {{ form_row(form.username) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.agreeTerms) }}

    <button>Inscription</button>
    {{ form_end(form) }}
{% endblock %}
