{% extends 'base.html.twig' %}

{% block title %}
    Réinitialiser votre mot de passe | {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('security_common') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('security_common') }}
{% endblock %}

{% block body %}
    <div class="content">
        <h1>Réinitialiser votre mot de passe</h1>

        {{ form_start(form) }}
        {{ form_row(form.plainPassword) }}
        <button class="button">Confirmer</button>
        {{ form_end(form) }}
    </div>
    <div class="decoration"></div>
{% endblock %}
