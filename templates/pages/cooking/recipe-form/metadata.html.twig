{% extends 'pages/cooking/recipe-form/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('cooking_recipe_form_metadata') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('cooking_recipe_form_metadata') }}
{% endblock %}

{% block form %}
    {{ form_row(form.title) }}

    <div class="row-group">
        <div>
            {{ form_row(form.description) }}
            {{ form_row(form.category) }}
        </div>
        {{ form_row(form.picture) }}
    </div>
{% endblock %}
